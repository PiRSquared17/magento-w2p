<config>
  <modules>
    <ZetaPrints_Ordercomments>
      <version>0.1.0</version>
    </ZetaPrints_Ordercomments>
  </modules>
  <frontend>
    <layout>
      <updates>
        <ordercomments>
          <file>ordercomments.xml</file>
        </ordercomments>
      </updates>
    </layout>
    <routers>
      <ordercomments>
        <use>standard</use>
        <args>
          <module>ZetaPrints_Ordercomments</module>
          <frontName>ordercomments</frontName>
        </args>
      </ordercomments>
    </routers>
  </frontend>
  <adminhtml>
    <layout>
      <updates>
        <ordercomments>
          <file>ordercomments.xml</file>
        </ordercomments>
      </updates>
    </layout>
  </adminhtml>
  <global>
    <models>
      <ordercomments>
        <class>ZetaPrints_Ordercomments_Model</class>
        <resourceModel>ordercomments_mysql4</resourceModel>
      </ordercomments>
      <ordercomments_mysql4>
        <class>ZetaPrints_Ordercomments_Model_Mysql4</class>
        <entities>
          <customer_comments>
            <table>customer_comments</table>
          </customer_comments>
        </entities>
      </ordercomments_mysql4>
      <sales>
        <rewrite>
          <order_status_history>ZetaPrints_Ordercomments_Model_History</order_status_history>
        </rewrite>
      </sales>
    </models>
    <resources>
      <ordercomments_setup>
        <setup>
          <module>ZetaPrints_Ordercomments</module>
          <class>ZetaPrints_Ordercomments_Model_Resource_Setup</class>
        </setup>
        <connection>
          <use>core_setup</use>
        </connection>
      </ordercomments_setup>
      <ordercomments_write>
        <connection>
          <use>core_write</use>
        </connection>
      </ordercomments_write>
      <ordercomments_read>
        <connection>
          <use>core_read</use>
        </connection>
      </ordercomments_read>
    </resources>
    <blocks>
      <ordercomments>
        <class>ZetaPrints_Ordercomments_Block</class>
      </ordercomments>
    </blocks>
    <helpers>
      <ordercomments>
        <class>ZetaPrints_Ordercomments_Helper</class>
      </ordercomments>
    </helpers>
    <rewrite>
      <ordercomments_front_addcomment>
        <from><![CDATA[#^/sales/order/addComment/#]]></from>
        <to>/ordercomments/index/addComment/</to>
      </ordercomments_front_addcomment>
    </rewrite>
  </global>
</config>
