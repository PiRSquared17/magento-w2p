<?xml version="1.0" ?>

<layout version="0.1.0">
  <checkout_cart_edit translate="label">
    <label>Cart edit</label>

    <reference name="root">
      <action method="setTemplate"><template>page/1column.phtml</template></action>
    </reference>

    <reference name="head">
      <action method="addJs"><script>mage/adminhtml/events.js</script></action>
      <action method="addJs"><script>mage/adminhtml/grid.js</script></action>
      <action method="addJs"><script>mage/adminhtml/form.js</script></action>

      <action method="addCss"><name>css/order-approval/styles.css</name></action>
    </reference>

    <reference name="content">
      <block type="core/template" name="cart-edit">
        <action method="setTemplate">
          <template>checkout/cart/edit.phtml</template>
        </action>

        <block type="orderapproval/cart_edit" name="cart-edit-table" />
      </block>
    </reference>
  </checkout_cart_edit>
</layout>
