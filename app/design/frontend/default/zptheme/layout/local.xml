<layout version="0.1.0">
  <catalog_product_view>
    <reference name="head">
      <action method="addItem"><type>skin_js</type><name>js/jquery-1.4.4-min.js</name></action>
      <action method="addItem"><type>skin_js</type><name>js/jquery-ui-1.8.7-custom-min.js</name></action>
      <action method="addItem"><type>skin_js</type><name>js/colorpicker.js</name></action>
      <action method="addItem"><type>skin_js</type><name>js/jquery-qtip-1.0.0-rc3.min.js</name></action>
      <action method="addItem"><type>skin_js</type><name>js/jquery.fancybox-1.3.1.pack.js</name></action>
      <action method="addItem"><type>skin_js</type><name>js/ajaxupload.js</name></action>
      <action method="addItem"><type>skin_js</type><name>js/zp-text-field-resizer.js</name></action>
      <action method="addItem"><type>skin_js</type><name>js/zp-text-field-editor.js</name></action>
      <action method="addItem"><type>skin_js</type><name>js/zp-metadata.js</name></action>
      <action method="addItem"><type>skin_js</type><name>js/zp-personalization-form.js</name></action>

      <action method="addItem"><type>skin_css</type><name>css/colorpicker.css</name></action>
      <action method="addItem"><type>skin_css</type><name>css/jquery.fancybox-1.3.1.css</name></action>
      <action method="addItem"><type>skin_css</type><name>css/zp-text-field-editor.css</name></action>
      <action method="addItem"><type>skin_css</type><name>css/zp-style.css</name></action>
    </reference>
  </catalog_product_view>

  <sales_order_view>
    <reference name="head">
      <action method="addItem"><type>skin_js</type><name>js/jquery-1.4.4-min.js</name></action>
      <action method="addItem"><type>skin_js</type><name>js/jquery.fancybox-1.3.1.pack.js</name></action>

      <action method="addItem"><type>skin_css</type><name>css/jquery.fancybox-1.3.1.css</name></action>
      <action method="addItem"><type>skin_css</type><name>css/zp-style.css</name></action>
    </reference>
  </sales_order_view>

  <checkout_cart_index>
    <reference name="head">
      <action method="addItem"><type>skin_js</type><name>js/jquery-1.4.4-min.js</name></action>
      <action method="addItem"><type>skin_js</type><name>js/jquery.fancybox-1.3.1.pack.js</name></action>

      <action method="addItem"><type>skin_css</type><name>css/jquery.fancybox-1.3.1.css</name></action>
      <action method="addItem"><type>skin_css</type><name>css/zp-style.css</name></action>
    </reference>
  </checkout_cart_index>

  <!-- Add support for ZetaPrints Order Approval extension -->
  <checkout_cart_edit>
    <reference name="head">
      <action method="addItem"><type>skin_js</type><name>js/jquery-1.4.4-min.js</name></action>
      <action method="addItem"><type>skin_js</type><name>js/jquery.fancybox-1.3.1.pack.js</name></action>

      <action method="addItem"><type>skin_css</type><name>css/jquery.fancybox-1.3.1.css</name></action>
      <action method="addItem"><type>skin_css</type><name>css/zp-style.css</name></action>
    </reference>
  </checkout_cart_edit>

  <zetaprints_webtoprint_image_index>
    <reference name="root">
      <block type="page/html" name="root" output="toHtml" template="image-edit/edit.phtml">
        <block type="page/html_head" name="head" as="head" template="image-edit/head.phtml">
          <action method="addItem"><type>skin_js</type><name>js/jquery-1.4.4-min.js</name></action>
          <action method="addItem"><type>skin_js</type><name>js/jquery-ui-1.8.7-custom-min.js</name></action>
          <action method="addItem"><type>skin_js</type><name>js/jquery-powercrop.js</name></action>
          <action method="addItem"><type>skin_js</type><name>js/zp-image-edit.js</name></action>
          <action method="addItem"><type>skin_js</type><name>js/zp-crop-visual-assistant.js</name></action>

          <action method="addItem"><type>skin_css</type><name>css/jquery-powercrop.css</name></action>
          <action method="addItem"><type>skin_css</type><name>css/jquery.fancybox-1.3.1.css</name></action>
          <action method="addItem"><type>skin_css</type><name>css/zp-style.css</name></action>
          <action method="addItem"><type>skin_css</type><name>css/zp-image-edit.css</name></action>
        </block>
      </block>
    </reference>
  </zetaprints_webtoprint_image_index>
</layout>
